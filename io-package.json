{
    "common": {
        "name":                     "sonos",
        "version":                  "0.1.8",
        "title":                    "SONOS Adapter",
        "desc":                     "This adapter allows to monitor and control SONOS players from ioBroker",
        "authors":                  ["bluefox <bluefox@ccu.io>"],
        "license":                  "MIT",
        "platform":                 "Javascript/Node.js",
        "mode":                     "daemon",
        "loglevel":                 "info",
        "messagebox":               true,
        "readme":                   "https://github.com/ioBroker/ioBroker.sonos/blob/master/README.md",
        "enabled":                  true,
        "icon":                     "sonos.png",
        "keywords":                 ["sonos", "player", "music"],
        "extIcon":                  "https://raw.githubusercontent.com/ioBroker/ioBroker.sonos/master/admin/sonos.png",
        "localLink":                "http://%ip%:%webserverPort%",
		"type":                     "media"
    },
    "native": {
        "webserverEnabled": true,
        "webserverPort":    8080,
        "elapsedInterval":  2000,
        "devices": [
            {"name": "Sonos1", "ip" : "0.0.0.0", "room": ""}
        ]
    },
    "objects": [

    ]
}
